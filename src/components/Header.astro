          </svg>
        </a>
      </div>
    </div>
  </div>
</div>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
  const menuLine1 = document.getElementById('menu-line-1');
  const menuLine2 = document.getElementById('menu-line-2');
  const menuLine3 = document.getElementById('menu-line-3');
  const menuLinks = document.querySelectorAll('.mobile-menu-link');

  let isMenuOpen = false;

  function toggleMenu() {
    isMenuOpen = !isMenuOpen;

    if (isMenuOpen) {
      // Abrir
      mobileMenu?.classList.remove('translate-x-full');
      mobileMenuOverlay?.classList.remove('opacity-0', 'invisible');
      
      // Bloquear scroll
      document.body.style.overflow = 'hidden';
      document.body.style.position = 'fixed';
      document.body.style.width = '100%';

      // Animar hamburger → X
      menuLine1?.classList.add('rotate-45', 'translate-y-2', 'bg-blue-600');
      menuLine2?.classList.add('opacity-0');
      menuLine3?.classList.add('-rotate-45', '-translate-y-2', 'bg-blue-600');
    } else {
      // Fechar
      mobileMenu?.classList.add('translate-x-full');
      mobileMenuOverlay?.classList.add('opacity-0', 'invisible');
      
      // Restaurar scroll
      document.body.style.overflow = '';
      document.body.style.position = '';
      document.body.style.width = '';

      // Animar X → hamburger
      menuLine1?.classList.remove('rotate-45', 'translate-y-2', 'bg-blue-600');
      menuLine2?.classList.remove('opacity-0');
      menuLine3?.classList.remove('-rotate-45', '-translate-y-2', 'bg-blue-600');
    }
  }

  mobileMenuBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    toggleMenu();
  });

  mobileMenuOverlay?.addEventListener('click', toggleMenu);

  // Fechar ao clicar nos links
  menuLinks.forEach(link => {
    link.addEventListener('click', () => {
      toggleMenu();
    });
  });

  // Prevenir propagação de cliques dentro do menu
  mobileMenu?.addEventListener('click', (e) => {
    e.stopPropagation();
  });
</script>