---

<header class="fixed top-0 w-full bg-white/80 backdrop-blur-xl border-b border-gray-100 z-50 transition-all">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group z-50 relative">
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-violet-600 rounded-2xl blur-lg opacity-30 group-hover:opacity-50 transition-opacity"></div>
          <div class="relative w-11 h-11 bg-gradient-to-br from-blue-600 to-violet-600 rounded-2xl flex items-center justify-center transform group-hover:scale-105 transition-transform shadow-lg shadow-blue-600/30">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
        </div>
        <span class="text-2xl font-bold bg-gradient-to-r from-gray-900 to-gray-700 bg-clip-text text-transparent">
          AgilTéc
        </span>
      </a>

      <!-- Desktop Menu -->
      <div class="hidden md:flex items-center gap-8">
        <a href="#recursos" class="text-gray-600 hover:text-blue-600 font-medium transition-colors relative group">
          Recursos
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-blue-600 group-hover:w-full transition-all"></span>
        </a>
        <a href="#como-funciona" class="text-gray-600 hover:text-blue-600 font-medium transition-colors relative group">
          Como Funciona
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-blue-600 group-hover:w-full transition-all"></span>
        </a>
        <a href="#depoimentos" class="text-gray-600 hover:text-blue-600 font-medium transition-colors relative group">
          Depoimentos
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-blue-600 group-hover:w-full transition-all"></span>
        </a>
        
        <button class="px-6 py-2.5 bg-gradient-to-r from-blue-600 to-violet-600 text-white rounded-xl font-semibold hover:shadow-lg hover:shadow-blue-600/30 transform hover:scale-105 transition-all">
          Baixar App
        </button>
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="md:hidden relative z-[60] w-10 h-10 flex items-center justify-center focus:outline-none">
        <div class="relative w-6 h-5">
          <span id="menu-line-1" class="absolute left-0 top-0 w-full h-0.5 bg-gray-700 rounded-full transition-all duration-300 ease-in-out"></span>
          <span id="menu-line-2" class="absolute left-0 top-1/2 -translate-y-1/2 w-full h-0.5 bg-gray-700 rounded-full transition-all duration-300 ease-in-out"></span>
          <span id="menu-line-3" class="absolute left-0 bottom-0 w-full h-0.5 bg-gray-700 rounded-full transition-all duration-300 ease-in-out"></span>
        </div>
      </button>
    </div>
  </nav>
</header>

<!-- Mobile Menu Overlay -->
